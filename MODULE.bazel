        "com.google.code.findbugs:jsr305:3.0.0",
        "junit:junit:4.13.1",
        "com.tngtech.java:junit-dataprovider:1.10.4",
        "org.hamcrest:hamcrest-core:1.3",
        "org.mockito:mockito-core:2.23.4",
        "javax.inject:javax.inject:1",
        "com.google.doclava:doclava:1.0.6",
