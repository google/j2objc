    name = "annotation-tools",
    sha256 = "c1419ed005a8872c32484539d4d9d8731e79db4621244855f5a460fffbe45c86",
    urls = [
        "https://github.com/eisop/annotation-tools/releases/download/3.27.0-eisop1/annotation-tools-3.27.0-eisop1.zip"
    ],
